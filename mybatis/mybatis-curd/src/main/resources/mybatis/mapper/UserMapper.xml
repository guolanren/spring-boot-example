<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="name.guolanren.mapper.UserMapper">

    <sql id="table">
        user
    </sql>

    <sql id="select_columns">
        id, name, age, gid
    </sql>

    <resultMap id="vo_map" type="UserVO">
        <!-- 如果没有无参构造器 -->
        <!--<constructor>-->
            <!--<idArg column="id" javaType="Long"/>-->
            <!--<arg column="name" javaType="String"/>-->
        <!--</constructor>-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <association property="goal" column="gid" select="name.guolanren.mapper.GoalMapper.get"/>
        <collection property="pcs" column="id" select="name.guolanren.mapper.PcMapper.getByBelongTo"/>
        <collection property="languages" column="id" select="name.guolanren.mapper.LanguageMapper.getByUserId"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO <include refid="table"/> (name, age)
        VALUES (#{name}, #{age})
    </insert>

    <delete id="delete">
        DELETE FROM <include refid="table"/>
        WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE <include refid="table"/>
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="age != null">
                age = #{age}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="get" parameterType="long" resultType="User" flushCache="false" useCache="true" timeout="10" fetchSize="256">
        SELECT <include refid="select_columns"/>
        FROM <include refid="table"/>
        WHERE id = #{id, jdbcType=BIGINT}
    </select>

    <select id="getVO" parameterType="long" resultMap="vo_map">
        SELECT <include refid="select_columns"/>
        FROM <include refid="table"/>
        WHERE id = #{id, jdbcType=BIGINT}
    </select>

</mapper>